{
    "info": {
        "_postman_id": "clinxchat-api-collection",
        "name": "ClinxChat API",
        "description": "User Registration and Authentication API for ClinxChat project",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Auth",
            "description": "Authentication endpoints - Login, Profile, Change Password",
            "item": [
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    if (jsonData.data && jsonData.data.token) {",
                                    "        pm.collectionVariables.set('token', jsonData.data.token);",
                                    "        console.log('Token saved to collection variable');",
                                    "    }",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"Password@123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        },
                        "description": "Login user and get JWT token. Token is automatically saved for subsequent requests."
                    },
                    "response": [
                        {
                            "name": "Success",
                            "status": "OK",
                            "code": 200,
                            "body": "{\n    \"success\": true,\n    \"message\": \"Login successful\",\n    \"data\": {\n        \"user\": {\n            \"id\": 1,\n            \"firstName\": \"Test\",\n            \"lastName\": \"User\",\n            \"email\": \"test@example.com\",\n            \"phone\": \"+1234567890\"\n        },\n        \"token\": \"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...\"\n    }\n}"
                        }
                    ]
                },
                {
                    "name": "Get Profile",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/profile",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "profile"
                            ]
                        },
                        "description": "Get current logged-in user profile. Requires authentication."
                    },
                    "response": [
                        {
                            "name": "Success",
                            "status": "OK",
                            "code": 200,
                            "body": "{\n    \"success\": true,\n    \"message\": \"Profile retrieved successfully\",\n    \"data\": {\n        \"id\": 1,\n        \"firstName\": \"Test\",\n        \"lastName\": \"User\",\n        \"email\": \"test@example.com\",\n        \"phone\": \"+1234567890\"\n    }\n}"
                        }
                    ]
                },
                {
                    "name": "Change Password",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"currentPassword\": \"Password@123\",\n    \"newPassword\": \"NewPassword@456\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/change-password",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "change-password"
                            ]
                        },
                        "description": "Change user password. Requires authentication."
                    },
                    "response": [
                        {
                            "name": "Success",
                            "status": "OK",
                            "code": 200,
                            "body": "{\n    \"success\": true,\n    \"message\": \"Password changed successfully\"\n}"
                        }
                    ]
                }
            ]
        },
        {
            "name": "Users",
            "description": "User management endpoints - Register, CRUD operations",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"password\": \"Password@123\",\n    \"phone\": \"+1234567890\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/users/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "users",
                                "register"
                            ]
                        },
                        "description": "Register a new user. Password must contain at least 8 characters with uppercase, lowercase, number, and special character."
                    },
                    "response": [
                        {
                            "name": "Success",
                            "status": "Created",
                            "code": 201,
                            "body": "{\n    \"success\": true,\n    \"message\": \"User registered successfully\",\n    \"data\": {\n        \"id\": 1,\n        \"firstName\": \"John\",\n        \"lastName\": \"Doe\",\n        \"email\": \"john.doe@example.com\",\n        \"phone\": \"+1234567890\"\n    }\n}"
                        },
                        {
                            "name": "Validation Error",
                            "status": "Bad Request",
                            "code": 400,
                            "body": "{\n    \"success\": false,\n    \"message\": \"Validation failed\",\n    \"errors\": [\n        {\n            \"field\": \"email\",\n            \"message\": \"Please provide a valid email address\"\n        }\n    ]\n}"
                        },
                        {
                            "name": "Email Exists",
                            "status": "Bad Request",
                            "code": 400,
                            "body": "{\n    \"success\": false,\n    \"message\": \"Email already registered\"\n}"
                        }
                    ]
                },
                {
                    "name": "Get All Users",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/users",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "users"
                            ]
                        },
                        "description": "Get list of all registered users."
                    },
                    "response": [
                        {
                            "name": "Success",
                            "status": "OK",
                            "code": 200,
                            "body": "{\n    \"success\": true,\n    \"message\": \"Users retrieved successfully\",\n    \"count\": 2,\n    \"data\": [\n        {\n            \"id\": 1,\n            \"first_name\": \"John\",\n            \"last_name\": \"Doe\",\n            \"email\": \"john.doe@example.com\",\n            \"phone\": \"+1234567890\",\n            \"created_at\": \"2024-01-01T00:00:00.000Z\",\n            \"is_active\": true\n        }\n    ]\n}"
                        }
                    ]
                },
                {
                    "name": "Get User by ID",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/users/1",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "users",
                                "1"
                            ]
                        },
                        "description": "Get a specific user by their ID."
                    },
                    "response": [
                        {
                            "name": "Success",
                            "status": "OK",
                            "code": 200,
                            "body": "{\n    \"success\": true,\n    \"message\": \"User retrieved successfully\",\n    \"data\": {\n        \"id\": 1,\n        \"first_name\": \"John\",\n        \"last_name\": \"Doe\",\n        \"email\": \"john.doe@example.com\",\n        \"phone\": \"+1234567890\",\n        \"created_at\": \"2024-01-01T00:00:00.000Z\",\n        \"is_active\": true\n    }\n}"
                        },
                        {
                            "name": "Not Found",
                            "status": "Not Found",
                            "code": 404,
                            "body": "{\n    \"success\": false,\n    \"message\": \"User not found\"\n}"
                        }
                    ]
                },
                {
                    "name": "Update User",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"firstName\": \"John Updated\",\n    \"lastName\": \"Doe Updated\",\n    \"phone\": \"+9876543210\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/users/1",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "users",
                                "1"
                            ]
                        },
                        "description": "Update user details by ID."
                    },
                    "response": [
                        {
                            "name": "Success",
                            "status": "OK",
                            "code": 200,
                            "body": "{\n    \"success\": true,\n    \"message\": \"User updated successfully\",\n    \"data\": {\n        \"id\": 1,\n        \"first_name\": \"John Updated\",\n        \"last_name\": \"Doe Updated\",\n        \"email\": \"john.doe@example.com\",\n        \"phone\": \"+9876543210\",\n        \"created_at\": \"2024-01-01T00:00:00.000Z\",\n        \"is_active\": true\n    }\n}"
                        }
                    ]
                },
                {
                    "name": "Delete User",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/users/1",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "users",
                                "1"
                            ]
                        },
                        "description": "Soft delete a user by ID (sets is_active to false)."
                    },
                    "response": [
                        {
                            "name": "Success",
                            "status": "OK",
                            "code": 200,
                            "body": "{\n    \"success\": true,\n    \"message\": \"User deleted successfully\"\n}"
                        }
                    ]
                }
            ]
        },
        {
            "name": "Health",
